{
  "extends": ["@commitlint/config-conventional"],
  "ignores": [
    {
      "pattern": "^Repo visualizer: update diagram$",
      "message": "Ignoring repo-visualizer commits"
    },
    {
      "pattern": "^Bumps [.+](.+) from .+ to .+.$",
      "message": "Ignoring Dependabot commits"
    }
  ],
  "rules": {
    "header-max-length": [2, "always", 72],
    "body-max-length": [0, "always", 100]
  }
}
